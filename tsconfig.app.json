{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"],
      "@sarradahub/design-system": ["design-system/src/index.ts"],
      "@sarradahub/design-system/tokens": ["design-system/src/tokens/index.ts"],
      "@sarradahub/design-system/icons": ["design-system/src/icons/index.ts"],
      "@sarradahub/design-system/utils": ["design-system/src/utils/cn.ts"],
      "@sarradahub/design-system/css": ["design-system/dist/styles.css"]
    },

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true
  },
  "include": ["src"]
}
